{
    "compilerOptions": {
        "target": "ES2021",
        "module": "ES2022",
        "lib": [
            "ES2021"
        ],
        "types": [
            "@cloudflare/workers-types",
            "jest"
        ],
        "moduleResolution": "node",
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}